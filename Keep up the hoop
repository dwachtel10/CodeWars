//8 kyu
//Instructions: 
//Write a program where Alex can input (n) how many times the hoop goes round and it will return him an encouraging message :)
//-If Alex gets 10 or more hoops, return the string "Great, now move on to tricks".
//-If he doesn't get 10 hoops, return the string "Keep at it until you get it".


public class Kata
{
  public static string HoopCount(int n) => n < 10 ? "Keep at it until you get it" : "Great, now move on to tricks";
}

//tests

using NUnit.Framework;
using System;

[TestFixture]
public class Tests
{
  [Test]
  public static void FixedTest()
  {
    Assert.AreEqual("Keep at it until you get it", Kata.HoopCount(6), "Should work for 6");
    Assert.AreEqual("Great, now move on to tricks", Kata.HoopCount(22), "Should work for 22");
  }
}
