//Instructions: Write a function to split a string and convert it into an array of words.

namespace Solution {
  using System;
  using System.Text.RegularExpressions;

  public class Solution
  {
    public static string[] StringToArray(string str)
    {
     //finally getting the hang of Regular Expressions? 
     return Regex.Split(str, @"\s");
      
    }
  }
}

//Provided tests for later proof

namespace Solution {
  using NUnit.Framework;
  using System;

  [TestFixture]
  public class SolutionTest
  {
    [Test]
    public void _1_Example()
    {
      Assert.AreEqual(new string[] {"Robin", "Singh"}, Solution.StringToArray("Robin Singh"));
    }

    [Test]
    public void _2_Example()
    {
      Assert.AreEqual(new string[] {"I", "love", "arrays", "they", "are", "my", "favorite"}, Solution.StringToArray("I love arrays they are my favorite"));
    }
  }
}
