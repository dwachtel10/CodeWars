//6 kyu
//Instructions:If we list all the natural numbers below 10 that are multiples of 3 or 5, we get 3, 5, 6 and 9. 
//The sum of these multiples is 23.
//Finish the solution so that it returns the sum of all the multiples of 3 or 5 below the number passed in.

public static class Kata
{
  public static int Solution(int value)
  {
    int sum = 0;
    for (int i = 1; i < value; i++)
      {
        if (i % 3 == 0 || i % 5 == 0)
          { sum += i; }
      }
      return sum;
  }
}

//tests
using NUnit.Framework;

[TestFixture]
public class Tests
{
  [Test]
  public void Test()
  {
    Assert.AreEqual(23, Kata.Solution(10));
    Assert.AreEqual(78, Kata.Solution(20));
    Assert.AreEqual(9168, Kata.Solution(200));
    Assert.AreEqual(0, Kata.Solution(0));
  }
}
