//7 kyu
//Instructions: Your task is to write a function that takes a string and return a new string with all vowels removed.


using System;
using System.Text.RegularExpressions;

public static class Kata
{
  public static string Disemvowel(string str) => Regex.Replace(str, @"[aeiouAEIOU]", "");
}

//tests

using System;
using NUnit.Framework;

[TestFixture]
public class DisemvowelTest
{
  [Test]
  public void ShouldRemoveAllVowels()
  {
    Assert.AreEqual(Kata.Disemvowel("This website is for losers LOL!"), 
    "Ths wbst s fr lsrs LL!");
  }
  
  [Test]
  public void MultilineString()
  {
    Assert.AreEqual(Kata.Disemvowel("No offense but,\nYour writing is among the worst I've ever read"), 
    "N ffns bt,\nYr wrtng s mng th wrst 'v vr rd");
  }

  [Test]
  public void OneMoreForGoodMeasure()
  {
    Assert.AreEqual(Kata.Disemvowel("What are you, a communist?"), 
    "Wht r y,  cmmnst?");
  }
}
