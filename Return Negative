//Instructions: In this simple assignment you are given a number and have to make it negative. But maybe the number is already negative?
//The number can be negative already, in which case no change is required.
//Zero (0) can't be negative, see examples above.

using System;
//this is almost too simple.  Might have to try something harder soon!
public static class Kata
{
  public static int MakeNegative(int number)
  {
    if (number > 0){
    return -(number);
    }
    else if (number < 0){
    return number;
    }
    else{
    return 0;
    }
  }
}

//tests 
using NUnit.Framework;

[TestFixture]
public class Tests
{
  [Test]
  public void Test1()
  {
    Assert.AreEqual(-42, Kata.MakeNegative(42));
  }
}
