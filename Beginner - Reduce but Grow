//8 kyu
//Instructions: Given and array of integers (x), return the result of multiplying the values together in order.

using System;
public class Kata
{
  public static int Grow(int[] x)
  {
    int final = 1;
    foreach(int n in x)
      {
        final *= n;
      }
      return final;
  }
}

//tests
namespace Solution {
  using NUnit.Framework;
  using System;

  [TestFixture]
  public class KataTests
  {
    [Test]
    public void BasicTests()
    {
      Assert.AreEqual(6, Kata.Grow(new [] { 1, 2, 3 }));
      Assert.AreEqual(16, Kata.Grow(new [] { 4, 1, 1, 1, 4 }));
      Assert.AreEqual(64, Kata.Grow(new [] { 2, 2, 2, 2, 2, 2 }));
    }
  }
}
