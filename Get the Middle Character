//7 kyu
//Instructions: You are going to be given a word. Your job is to return the middle character of the word. 
//If the word's length is odd, return the middle character. If the word's length is even, return the middle 2 characters.
using System;

public class Kata
{
  public static string GetMiddle(string s)
  {
  double length = s.Length;
  int half = (int)Math.Floor(length/2);
  if (length % 2 == 0)
    {
      return s.Substring(half -1, 2);
    }
    else
    {
      return s.Substring(half, 1);
    }
  }
}

//test

using NUnit.Framework;  
using System;
[TestFixture]
public class GetMiddleTest
{
  [Test]
  public void GenericTests()
  {
    Assert.AreEqual("es",Kata.GetMiddle("test"));
    Assert.AreEqual("t",Kata.GetMiddle("testing"));
    Assert.AreEqual("dd",Kata.GetMiddle("middle"));
    Assert.AreEqual("A",Kata.GetMiddle("A"));
  }
