//Instructions: Implement a function named generateRange(min, max, step), which takes three arguments and generates a range of integers from min to max, with the step. 
//The first integer is the minimum value, the second is the maximum of the range and the third is the step. (min < max)

using System;
using System.Collections.Generic;

public class Kata
{
  public static int[] GenerateRange(int min, int max, int step)
  {
  List<int> numbers = new List<int>(); 
  
  while (min <= max)
    {
    numbers.Add(min);
    min += step;
    }
  return numbers.ToArray();
  }
}


//tests 

using NUnit.Framework;

[TestFixture]
public class Tests
{
  [Test]
  [TestCase(2,10,2,Result=new int[]{2,4,6,8,10})]
  public static int[] FixedTest(int min, int max, int step)
  {
    return Kata.GenerateRange(min, max,step);
  }
}
