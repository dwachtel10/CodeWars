//8 kyu
//Instructions:Create a function that gives a personalized greeting. This function takes two parameters: name and owner.
//Use conditionals to return the proper message: case | return --- | --- name equals owner | 'Hello boss' otherwise | 'Hello guest'

public class Kata
{
  public static string Greet(string name, string owner) => (name == owner) ? "Hello boss" : "Hello guest";
}

//test

namespace Solution 
{
  using NUnit.Framework;
  using System;
  using System.Linq;

  [TestFixture]
  public class KataTests
  {
    [Test]
    public void BasicTests()
    {
      Assert.AreEqual("Hello boss", Kata.Greet("Daniel", "Daniel"));
      Assert.AreEqual("Hello guest", Kata.Greet("Greg", "Daniel"));
    }
    
    [Test]
    public void RandomTests()
    {
      var rand = new Random();
      for (var i = 0; i < 10; i++) 
      {
        var first = string.Concat(Enumerable.Range(0, rand.Next(4,8)).Select(a => (char)rand.Next(97, 123)));
        var second = string.Concat(Enumerable.Range(0, rand.Next(4,8)).Select(a => (char)rand.Next(97, 123)));
        
        if(rand.Next(0,2) == 0)
        {
          Assert.AreEqual("Hello boss", Kata.Greet(first, first));
        }
        else
        {
          Assert.AreEqual("Hello guest", Kata.Greet(first, second));
        }
      }
    }
  }
}
