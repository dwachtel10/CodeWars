//7 kyu
//Instructions:
//In this kata, you are asked to square every digit of a number.
//For example, if we run 9119 through the function, 811181 will come out, because 92 is 81 and 12 is 1.

using System;
using System.Collections.Generic;

public class Kata
{
  public static int SquareDigits(int n)
  {
   string sqNum = "";
   List<int> intList = new List<int>();
   string nString = n.ToString();
      foreach(char c in nString)
     {
       int i = (int)Char.GetNumericValue(c);
       intList.Add((int)Math.Pow(i, 2));
     }
    sqNum = string.Join("", intList.ToArray());
    return (int)Convert.ToInt64(sqNum);
  }
}

//test
using System;
using System.Collections.Generic;
using System.Linq;
using NUnit.Framework;

[TestFixture]
public class KataTest
{
  public int Solution(int n)
  {
    return int.Parse(String.Join("", n.ToString().Select(d => int.Parse(""+d) * int.Parse(""+d))));
  }
  
  [Test]
  public void KataSquareDigitsTest()
  {
    Assert.AreEqual(811181, Kata.SquareDigits(9119));
    Assert.AreEqual(9414, Kata.SquareDigits(3212));
    Assert.AreEqual(4114, Kata.SquareDigits(2112));
  }
  
  [Test]
  public void RandomTest()
  {
    var random = new Random();
    int next;
    
    for (int i = 0; i < 10; ++i)
    {
      next = random.Next(0, 1001);
      Assert.AreEqual(Solution(next), Kata.SquareDigits(next));
    }
  }
}
